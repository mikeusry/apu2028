---
import CloudinaryImage from './CloudinaryImage.astro';

// Image public IDs in Cloudinary (AynParkerUsry folder)
const heroImageId = "ayn_parker_usry_profile";
const hasHeroImage = true;
---

<section class="relative min-h-screen flex items-center pt-20 pb-16 px-4 md:px-8 bg-gradient-to-br from-gray-50 to-white">
  <div class="container-narrow mx-auto">
    <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
      <!-- Photo -->
      <div class="order-2 md:order-1">
        <div class="max-w-md mx-auto md:mx-0">
          {hasHeroImage ? (
            <CloudinaryImage
              publicId={heroImageId}
              alt="Ayn Parker Usry - Outfielder"
              width={800}
              height={1000}
              crop="fill"
              gravity="face"
              loading="eager"
              fetchpriority="high"
              sizes="(max-width: 768px) 100vw, 400px"
              widths={[400, 600, 800, 1000]}
              class="w-full h-auto rounded-2xl shadow-2xl"
            />
          ) : (
            <div class="aspect-[4/5] bg-gradient-to-br from-navy/20 to-navy/40 rounded-2xl flex items-center justify-center">
              <span class="text-white/60 text-sm">Action Photo</span>
            </div>
          )}
        </div>
      </div>

      <!-- Info -->
      <div class="order-1 md:order-2 text-center md:text-left">
        <div class="flex items-center justify-center md:justify-start gap-3 mb-2">
          <p class="text-navy font-semibold tracking-wide uppercase text-sm">Class of 2028</p>
          <span class="bg-green-100 text-green-800 text-xs font-semibold px-2.5 py-0.5 rounded">Uncommitted</span>
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-gray-900 mb-4">
          Ayn Parker Usry
        </h1>

        <div class="flex flex-wrap justify-center md:justify-start gap-x-4 gap-y-2 text-gray-600 mb-6">
          <span class="font-medium">Outfield (CF/Corner)</span>
          <span class="text-gray-300">|</span>
          <span>R/R</span>
          <span class="text-gray-300">|</span>
          <span>5'7" | 135 lbs</span>
        </div>

        <div class="space-y-2 text-gray-700 mb-8">
          <p>
            <span class="font-semibold">Team:</span>{" "}
            <a
              href="https://www.starsnational.com/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-navy hover:underline"
            >
              Stars National Walker
            </a>
          </p>
          <p>
            <span class="font-semibold">School:</span>{" "}
            <a
              href="https://www.liberty.edu/online-academy/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-navy hover:underline"
            >
              Liberty University Online Academy
            </a>
          </p>
        </div>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start mb-8">
          <a href="#video" class="btn-primary inline-flex items-center justify-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z" />
            </svg>
            Watch Highlights
          </a>
          <a href="#contact" class="btn-secondary inline-flex items-center justify-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Contact Me
          </a>
        </div>

        <!-- Social Links -->
        <div class="flex items-center justify-center md:justify-start gap-4">
          <a
            href="https://x.com/AynParkerUsry"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-500 hover:text-navy transition-colors"
            aria-label="Twitter/X Profile"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a
            href="mailto:aynparkerusry2028@gmail.com"
            class="text-gray-500 hover:text-navy transition-colors"
            aria-label="Email"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <a href="#video" class="text-gray-400 hover:text-navy transition-colors">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>
