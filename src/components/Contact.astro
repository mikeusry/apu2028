---
const contacts = {
  player: {
    name: "Ayn Parker Usry",
    email: "aynparkerusry2028@gmail.com",
    twitter: "@AynParkerUsry",
    twitterUrl: "https://x.com/AynParkerUsry",
    youtube: "APU-2028",
    youtubeUrl: "https://www.youtube.com/@APU-2028",
    ncaaId: "2509718485",
  },
  parents: {
    dad: {
      name: "Mike Usry",
      email: "mike@southlandorganics.com",
    },
    mom: {
      name: "Karin Usry",
      email: "karin@southlandorganics.com",
    },
  },
  coaches: {
    head: {
      name: "Joe Walker",
      email: "Starsnationalwalker@gmail.com",
    },
    assistant: {
      name: "Adrian Diaz",
      email: "adriandiaz2307@gmail.com",
    },
    team: "Stars National Walker",
    twitter: "@StarsNatWalker",
    twitterUrl: "https://x.com/StarsNatWalker",
  },
  references: {
    track: {
      name: "Jonathan Kilgore",
      role: "Track Coach, Prince Avenue Christian School",
    },
  },
};
---

<section id="contact" class="section-padding bg-navy">
  <div class="max-w-6xl mx-auto pt-8 pb-8">
    <h2 class="text-3xl md:text-4xl font-bold text-white text-center mb-4">
      Get in Touch
    </h2>
    <p class="text-gray-300 text-center mb-12 max-w-xl mx-auto">
      Interested in learning more? I'd love to hear from you.
    </p>

    <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
      <!-- Player Contact -->
      <div class="bg-white rounded-xl p-6 text-center">
        <div class="w-12 h-12 bg-navy/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-6 h-6 text-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <h3 class="font-bold text-lg text-gray-900 mb-3">Player</h3>
        <p class="font-medium text-gray-900 mb-2">{contacts.player.name}</p>
        <a
          href={`mailto:${contacts.player.email}`}
          class="text-navy hover:underline text-sm block mb-2"
        >
          {contacts.player.email}
        </a>
        <div class="flex items-center justify-center gap-4 mb-2">
          <a
            href={contacts.player.twitterUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-navy text-sm inline-flex items-center"
          >
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
            {contacts.player.twitter}
          </a>
          <a
            href={contacts.player.youtubeUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-red-600 text-sm inline-flex items-center"
          >
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
            YouTube
          </a>
        </div>
        <p class="text-xs text-gray-500 mt-1">
          NCAA ID: {contacts.player.ncaaId}
        </p>
      </div>

      <!-- Parent Contact -->
      <div class="bg-white rounded-xl p-6 text-center">
        <div class="w-12 h-12 bg-navy/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-6 h-6 text-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <h3 class="font-bold text-lg text-gray-900 mb-3">Parents</h3>
        <div class="space-y-3">
          <div>
            <p class="font-medium text-gray-900">{contacts.parents.dad.name}</p>
            <a
              href={`mailto:${contacts.parents.dad.email}`}
              class="text-navy hover:underline text-sm"
            >
              {contacts.parents.dad.email}
            </a>
          </div>
          <div>
            <p class="font-medium text-gray-900">{contacts.parents.mom.name}</p>
            <a
              href={`mailto:${contacts.parents.mom.email}`}
              class="text-navy hover:underline text-sm"
            >
              {contacts.parents.mom.email}
            </a>
          </div>
        </div>
      </div>

      <!-- Coach Contact -->
      <div class="bg-white rounded-xl p-6 text-center">
        <div class="w-12 h-12 bg-navy/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-6 h-6 text-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        <h3 class="font-bold text-lg text-gray-900 mb-2">Travel Coaches</h3>
        <p class="text-sm text-gray-600 mb-3">{contacts.coaches.team}</p>
        <div class="space-y-3">
          <div>
            <p class="font-medium text-gray-900">{contacts.coaches.head.name}</p>
            <a
              href={`mailto:${contacts.coaches.head.email}`}
              class="text-navy hover:underline text-sm"
            >
              {contacts.coaches.head.email}
            </a>
          </div>
          <div>
            <p class="font-medium text-gray-900">{contacts.coaches.assistant.name}</p>
            <a
              href={`mailto:${contacts.coaches.assistant.email}`}
              class="text-navy hover:underline text-sm"
            >
              {contacts.coaches.assistant.email}
            </a>
          </div>
        </div>
        <a
          href={contacts.coaches.twitterUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-600 hover:text-navy text-sm inline-flex items-center justify-center mt-3"
        >
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
          {contacts.coaches.twitter}
        </a>
      </div>
    </div>

    <!-- References Note -->
    <div class="mt-8 text-center">
      <p class="text-gray-400 text-sm">
        <span class="font-medium text-gray-300">Reference available:</span> {contacts.references.track.name} ({contacts.references.track.role})
      </p>
    </div>

  </div>
</section>
